[
  {
    "name": "theme_info",
    "theme_name": "Critical Kit",
    "theme_author": "Critical Kit Team",
    "theme_version": "1.0.0",
    "theme_documentation_url": "",
    "theme_support_url": ""
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#1a365d",
        "info": "Deep blue primary brand color"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color",
        "default": "#a0aec0",
        "info": "Silver/gray secondary color"
      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent Color",
        "default": "#d4af37",
        "info": "Gold accent color for magical elements"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#2d3748"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#f7fafc"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading Font",
        "default": "playfair_display_n4",
        "info": "Serif font for headings to match mythical theme"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body Font",
        "default": "source_sans_pro_n4",
        "info": "Clean readable font for body text"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "label": "Base Font Size",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "default": 16
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo Width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "default": 200
      },
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Sticky Header",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart Type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "ajax_cart_enable",
        "label": "Enable AJAX Cart",
        "default": true
      }
    ]
  },
  {
    "name": "Product",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_reviews",
        "label": "Enable Product Reviews",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_wishlist",
        "label": "Enable Wishlist",
        "default": true
      },
      {
        "type": "range",
        "id": "products_per_row",
        "label": "Products per Row",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 3
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_predictive_search",
        "label": "Enable Predictive Search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_search_filters",
        "label": "Enable Search Filters",
        "default": true
      }
    ]
  },
  {
    "name": "Effects",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_magical_effects",
        "label": "Enable Magical UI Effects",
        "default": true,
        "info": "Subtle animations and magical accents"
      },
      {
        "type": "checkbox",
        "id": "enable_dice_animations",
        "label": "Enable Dice Animations",
        "default": true
      }
    ]
  }
]